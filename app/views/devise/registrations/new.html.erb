<div class="main-bord contents">

  <h1 class="content-title">新規ユーザー登録</h2>

  <div class="form-area">

    <%= form_with model: @user, url: user_registration_path, html: {autocomplete: 'off'}, local: true do |f| %>  

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">

          <%= f.label :employee_number, "社員番号", class: "field__label" %>
          <%= f.text_field :employee_number, class: "field__input" %>

      </div>

      <div class="field">

        <%= f.label :password, "パスワード", class: "field__label" %>
        <%= f.password_field :password, class: "field__input" %>

      </div>

      <div class="field">

          <%= f.label :password_confirmation, "パスワード(再入力)", class: "field__label" %>
          <%= f.password_field :password_confirmation, class: "field__input" %>

      </div>

      <div class="field">

          <%= f.label :name, "氏名", class: "field__label" %>
          <%= f.text_field :name, class: "field__input" %>

      </div>

      <div class="field">

          <%= f.label :admin_id, "権限", class: "field__label__select active" %>
          <%= f.collection_select(:admin_id, Admin.all, :id, :name, {}, {class: "field__input"}) %>

      </div>

      <div class="new-user-item">
        <%= f.submit "登録", class: "btn--form center"  %>
      </div>

    <% end %>

  </div>
</div>