<div class="main-bord">

  <div class="contents">

    <h1 class="content-title">新規見積入力</h1>

    <div class="quotation-form">

      <%= form_with(model: @quotation, local: true, id: "quotation_input", html: {autocomplete: 'off'}) do |form| %>

        <%= render 'shared/error_messages', model: form.object %>

        <%= form.label :title, "タイトル" %>
        <%= form.text_field :title %>
        <br>
        <%# 顧客名は１００件以上になるため、後でサジェスト機能を実装する%>
        <%= form.label :client_id, "顧客名" %>
        <%= form.collection_select(:client_id, @clients, :id, :name, include_blank: "選択してください" ) %>
        <br>
        <%= form.label :charge, "ご担当" %>
        <%= form.text_field :charge %>
        <br>
        <%= form.label :delivery_date, "納期" %>
        <%= form.text_field :delivery_date, list: 'deli_data_list' %>
          <%# 入力と、よく使用する文章の選択を両方できるようにするためdatalistを使用%>
          <datalist id="deli_data_list">
            <option value='別途打ち合わせ'>
            <option value='当日'>
            <option value='翌日'>
            <option value='翌々日'>
            <option value='1週間'>
          </datalist>
        <br>
        <%= form.label :expiration_date, "有効期限" %>
        <%= form.text_field :expiration_date, list: 'expi_data_list' %>
          <datalist id='expi_data_list'>
            <option value='1ヶ月'>
            <option value='3ヶ月'>
            <option value='1年間'>
            <option value='別途打ち合わせ'>
          </datalist>
        <br>
        <%= form.label :delivery_place, "受渡場所" %>
        <%= form.text_field :delivery_place, list: 'deli_place_list' %>
          <datalist id='deli_place_list'>
            <option value='弊社'>
            <option value='御社(運送便)'>
            <option value='御社(定期便)'>
            <option value='別途指定場所'>
          </datalist>
        <br>
        <%= form.label :business_terms, "取引条件" %>
        <%= form.text_field :business_terms, list: 'busi_terms_list' %>
          <datalist id='busi_terms_list'>
            <option value='従来通り'>
            <option value='現金払い'>
            <option value='口座振込'>
            <option value='別途打ち合わせ'>
          </datalist>
        <br>
        <div class="submit-btn">
          <%= form.submit "図面を追加する", id: "submit", class: "btn btn--form" %>
        </div>
        
      <% end %>

    </div>

  </div>

</div>